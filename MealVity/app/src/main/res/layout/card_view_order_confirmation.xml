<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardBackgroundColor="@color/colorAccent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:fontFamily="@font/fonarto_bold"
            android:text="@string/text_string_confirmation"
            android:padding="2dp"
            />

        <include
            layout="@layout/view_separator_black"/>


        <TextView
            android:id="@+id/text_view_order_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:padding="1dp"
            android:fontFamily="@font/fonarto_regular"
            tools:text="Status"/>

        <TextView
            android:id="@+id/text_view_order_expected_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:padding="1dp"
            android:fontFamily="@font/fonarto_regular"
            tools:text="Expected delivery time"/>

        <TextView
            android:id="@+id/text_view_rejection_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:padding="1dp"
            android:fontFamily="@font/fonarto_regular"
            tools:text="Reason"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>