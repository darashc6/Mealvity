<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/colorAccent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_reference_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:padding="1dp"
            android:fontFamily="@font/fonarto_regular"
            tools:text="Reference number"/>

        <TextView
            android:id="@+id/text_view_restaurant_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:padding="1dp"
            android:fontFamily="@font/fonarto_regular"
            tools:text="Restaurant"/>

        <TextView
            android:id="@+id/text_view_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:padding="1dp"
            android:fontFamily="@font/fonarto_regular"
            tools:text="Date"/>

        <TextView
            android:id="@+id/text_view_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:padding="1dp"
            android:fontFamily="@font/fonarto_regular"
            tools:text="Time"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:padding="1dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_view_number_guests"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18sp"
                android:gravity="center_vertical|start"
                android:textColor="@color/black"
                android:fontFamily="@font/fonarto_regular"
                tools:text="NÂº Guests"/>

            <TextView
                android:id="@+id/text_view_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18sp"
                android:gravity="center_vertical|end"
                android:textColor="@color/black"
                android:fontFamily="@font/fonarto_regular"
                tools:text="Status"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_rejection_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            >

            <include
                layout="@layout/view_separator_black"/>

            <TextView
                android:id="@+id/text_view_rejection_reason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:padding="1dp"
                android:fontFamily="@font/fonarto_regular"
                tools:text="Rejection reason"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>