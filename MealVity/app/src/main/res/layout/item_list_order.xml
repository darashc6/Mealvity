<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardBackgroundColor="@color/colorAccent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_reference_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:padding="1dp"
            android:fontFamily="@font/fonarto_regular"
            tools:text="Reference number"/>

        <TextView
            android:id="@+id/text_view_restaurant_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:padding="1dp"
            android:fontFamily="@font/fonarto_regular"
            tools:text="Restaurant Name"/>

        <TextView
            android:id="@+id/text_view_order_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:padding="1dp"
            android:fontFamily="@font/fonarto_regular"
            tools:text="Order total"/>

        <TextView
            android:id="@+id/text_view_payment_method"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:padding="1dp"
            android:fontFamily="@font/fonarto_regular"
            tools:text="Payment Method"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:padding="1dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_view_delivery_method"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18sp"
                android:gravity="center_vertical|start"
                android:textColor="@color/black"
                android:fontFamily="@font/fonarto_regular"
                tools:text="Delivery Method"/>

            <TextView
                android:id="@+id/text_view_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18sp"
                android:gravity="center_vertical|end"
                android:textColor="@color/black"
                android:fontFamily="@font/fonarto_regular"
                tools:text="Status"/>

        </LinearLayout>

        <include
            layout="@layout/view_separator_black"/>

        <TextView
            android:id="@+id/text_view_more_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:padding="1dp"
            android:fontFamily="@font/fonarto_regular"
            android:text="@string/text_more_info"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>